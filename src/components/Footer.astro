---
import { getCollection } from 'astro:content';
import { name } from 'spectre:globals';
import Icon from './Icon.astro';

const path = Astro.url.pathname;


const socials = await getCollection("socials")
---

<footer>
    <hr/>
    <div class="footer-header">
        <a class="site-title" href="/">{name}</a>
        
        <div class="footer-socials-list" style="">
            {
                socials.map((item) => (
                    <a href={item.data.link} style="text-decoration: none;" target="_blank">
                        <div class="footer-socials-button">
                            <Icon
                                type={item.data.icon.type}
                                name={item.data.icon.name as any}
                                width={25}
                                height={25}
                                class="glow-icon"
                            />
                        </div>
                    </a>
                ))
            }
        </div>
        <p>Made with â™¥</p> 
    </div>
    
</footer>
<style>
    footer {
        background-color: var(--darkest-purple);
        padding: 0rem 2rem 1rem;
    }

    .footer-header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
        align-items: baseline;
        font-family: "Geist Mono", monospace;
    }

    .site-title {
        font-weight: 800;
        text-decoration: none;
        font-size: 1.25em;
        z-index: 2;
    }

    .footer-socials-list {
        display: flex;
        flex-direction: row;
        margin-top: 1rem;
    }

    .footer-socials-button {
        display: flex;
        padding: 0.5rem;
        border-radius: 1rem;
        border: 1px solid var(--dark-grey);
        background: var(--darkest-purple);
        text-decoration: none;
    }

    footer a {
        color: inherit;
        text-decoration: none;
        padding: 0.25rem 0.5rem;
    }

    .site-title:hover,
    .site-title:focus-visible,
    .site-title .active {
        background-color: var(--primary);
        color: var(--darkest-purple);
        outline: none;
    }

    .footer-socials-button:hover {
        background: var(--dark-grey);
        border: 1px solid var(--primary);
    }

    @media screen and (max-width: 640px) {
        .footer-header {
            flex-direction: column;
            align-items: center;
        }
    }
</style>
